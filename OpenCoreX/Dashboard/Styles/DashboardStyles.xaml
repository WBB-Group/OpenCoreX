<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:funcs="clr-namespace:OpenCoreX.Dashboard.Functions">

    <!-- Converters -->
    <funcs:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

    <!-- Color Brushes -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#080C15" />
    <LinearGradientBrush x:Key="AccentBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#5B9BFC" Offset="0" />
        <GradientStop Color="#8F6BFF" Offset="1" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="CardBrush" Color="#111824" />
    <SolidColorBrush x:Key="SubtleTextBrush" Color="#7D8AA5" />

    <!-- Navigation Button Style -->
    <Style x:Key="NavButtonStyle" TargetType="Button">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Margin" Value="0,4" />
        <Setter Property="Padding" Value="16 10" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                        <ContentPresenter VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#1B2435" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#232E44" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- TabControl Style -->
    <Style x:Key="DashboardTabControlStyle" TargetType="TabControl">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <!-- TabItem Style -->
    <Style x:Key="DashboardTabItemStyle" TargetType="TabItem">
        <Setter Property="Foreground" Value="{StaticResource SubtleTextBrush}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Margin" Value="0,0,18,0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Border Background="Transparent" CornerRadius="6">
                        <StackPanel Orientation="Vertical" Margin="0,0,0,4">
                            <ContentPresenter HorizontalAlignment="Center" />
                            <Border Height="3" Margin="0,8,0,0" CornerRadius="3" Background="Transparent" x:Name="Underline" />
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Underline" Property="Background" Value="{StaticResource AccentBrush}" />
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Underline" Property="Background" Value="#264060" />
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Metric Card Style -->
    <Style x:Key="MetricCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBrush}" />
        <Setter Property="CornerRadius" Value="14" />
        <Setter Property="Padding" Value="18" />
        <Setter Property="Margin" Value="0,0,16,0" />
    </Style>

    <!-- Info Card Style -->
    <Style x:Key="InfoCard" TargetType="Border">
        <Setter Property="Background" Value="#111A2A" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="0,0,12,0" />
    </Style>

    <!-- Panel Card Style -->
    <Style x:Key="PanelCard" TargetType="Border">
        <Setter Property="Background" Value="#111A2A" />
        <Setter Property="CornerRadius" Value="14" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="BorderBrush" Value="#172033" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!-- Event Card Style -->
    <Style x:Key="EventCard" TargetType="Border">
        <Setter Property="Background" Value="#131C2C" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="Margin" Value="0,0,0,10" />
    </Style>

</ResourceDictionary>
