<UserControl x:Class="OpenCoreX.Dashboard.Overview.OverviewTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/DashboardStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Margin="0,16,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Platform Info Cards -->
        <UniformGrid Grid.Row="0" Columns="3" Margin="0,0,0,16">
            <Border Style="{StaticResource InfoCard}">
                <StackPanel>
                    <TextBlock Text="Platform" Foreground="{StaticResource SubtleTextBrush}" />
                    <TextBlock Text="Windows 11 Pro (Build 26100)" Foreground="White" TextWrapping="Wrap" />
                </StackPanel>
            </Border>
            <Border Style="{StaticResource InfoCard}">
                <StackPanel>
                    <TextBlock Text="Kernel" Foreground="{StaticResource SubtleTextBrush}" />
                    <TextBlock Text="10.0.26100.1641" Foreground="White" />
                </StackPanel>
            </Border>
            <Border Style="{StaticResource InfoCard}" Margin="0">
                <StackPanel>
                    <TextBlock Text="Secure Boot" Foreground="{StaticResource SubtleTextBrush}" />
                    <TextBlock Text="Enabled" Foreground="#7FE29B" FontWeight="SemiBold" />
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- Main Content Grid -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="1.1*" />
            </Grid.ColumnDefinitions>
            
            <!-- Active Processes Panel -->
            <Border Style="{StaticResource PanelCard}">
                <StackPanel>
                    <TextBlock Text="Active Processes" Foreground="White" FontSize="16" FontWeight="SemiBold" />
                    
                    <!-- Header Row -->
                    <Border Margin="0,12,0,0" Background="#101728" Padding="12" CornerRadius="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition Width="110" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Process" Grid.Column="0" Foreground="{StaticResource SubtleTextBrush}" />
                            <TextBlock Text="CPU" Grid.Column="1" Foreground="{StaticResource SubtleTextBrush}" />
                            <TextBlock Text="Memory" Grid.Column="2" Foreground="{StaticResource SubtleTextBrush}" />
                        </Grid>
                    </Border>
                    
                    <!-- Process List -->
                    <StackPanel Margin="0,12,0,0">
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition Width="110" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="explorer.exe" Grid.Column="0" Foreground="White" />
                            <TextBlock Text="3%" Grid.Column="1" Foreground="{StaticResource SubtleTextBrush}" />
                            <TextBlock Text="220 MB" Grid.Column="2" Foreground="{StaticResource SubtleTextBrush}" />
                        </Grid>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition Width="110" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="code.exe" Grid.Column="0" Foreground="White" />
                            <TextBlock Text="11%" Grid.Column="1" Foreground="{StaticResource SubtleTextBrush}" />
                            <TextBlock Text="850 MB" Grid.Column="2" Foreground="{StaticResource SubtleTextBrush}" />
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition Width="110" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="opencorex.exe" Grid.Column="0" Foreground="White" />
                            <TextBlock Text="4%" Grid.Column="1" Foreground="{StaticResource SubtleTextBrush}" />
                            <TextBlock Text="150 MB" Grid.Column="2" Foreground="{StaticResource SubtleTextBrush}" />
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Recent Events Panel -->
            <Border Grid.Column="1" Style="{StaticResource PanelCard}" Margin="18,0,0,0">
                <StackPanel>
                    <TextBlock Text="Recent Events" Foreground="White" FontSize="16" FontWeight="SemiBold" />
                    
                    <Border Style="{StaticResource EventCard}" Margin="0,12,0,10">
                        <StackPanel>
                            <TextBlock Text="Firmware Guard" Foreground="White" FontWeight="SemiBold" />
                            <TextBlock Text="UEFI region validated with no mismatches." Foreground="{StaticResource SubtleTextBrush}" TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>
                    
                    <Border Style="{StaticResource EventCard}">
                        <StackPanel>
                            <TextBlock Text="Driver Map" Foreground="White" FontWeight="SemiBold" />
                            <TextBlock Text="Snapshot stored to baseline library." Foreground="{StaticResource SubtleTextBrush}" TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>
                    
                    <Border Style="{StaticResource EventCard}" Margin="0">
                        <StackPanel>
                            <TextBlock Text="Watchdog" Foreground="White" FontWeight="SemiBold" />
                            <TextBlock Text="Runtime monitoring resumed with hardened profile." Foreground="{StaticResource SubtleTextBrush}" TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
