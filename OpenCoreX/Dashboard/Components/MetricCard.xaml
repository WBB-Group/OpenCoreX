<UserControl x:Class="OpenCoreX.Dashboard.Components.MetricCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="200">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/DashboardStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Border Style="{StaticResource MetricCard}">
        <StackPanel>
            <TextBlock x:Name="TitleText" 
                       Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                       Foreground="{StaticResource SubtleTextBrush}" />
            <TextBlock x:Name="ValueText" 
                       Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                       Foreground="White" FontSize="22" FontWeight="SemiBold" />
            
            <!-- Optional Progress Bar -->
            <ProgressBar x:Name="ProgressIndicator"
                         Value="{Binding Progress, RelativeSource={RelativeSource AncestorType=UserControl}}"
                         Height="6" Margin="0,10,0,0"
                         Foreground="{StaticResource AccentBrush}"
                         Background="#1C2232"
                         Visibility="{Binding ShowProgress, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibilityConverter}}" />
            
            <!-- Optional Subtitle -->
            <TextBlock x:Name="SubtitleText"
                       Text="{Binding Subtitle, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       Foreground="{StaticResource SubtleTextBrush}" 
                       Margin="0,8,0,0"
                       Visibility="{Binding HasSubtitle, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibilityConverter}}" />
        </StackPanel>
    </Border>
</UserControl>
